{
    "custom/arch": {
        "format": "󰣇",
        "tooltip": true,
        "tooltip-format": "btw",
        "menu": "on-click",
        "menu-file": "~/.config/waybar/power_menu.xml",
        "menu-actions": {
            "lock": "~/.config/hypr/scripts/graceful-lock.sh",
            "logout": "~/.config/hypr/scripts/graceful-logout.sh",
            "suspend": "~/.config/hypr/scripts/graceful-suspend.sh",
            "reboot": "~/.config/hypr/scripts/graceful-reboot.sh",
            "shutdown": "~/.config/hypr/scripts/graceful-shutdown.sh"
        }
    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{name}",
        "on-click": "activate"
    },
    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-bluetooth": "{icon} {volume}%  {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-source": " {volume}%",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                "",
                ""
            ]
        },
        "on-click": "~/.config/waybar/scripts/audio-switcher.sh"
    },
    "cpu": {
        "format": "  {usage}%",
        "tooltip": true
    },
    "memory": {
        "format": "  {}%",
        "tooltip": true
    },
    "hyprland/language": {
        "format": "  {}",
        "format-en": "EN",
        "format-hi": "HI"
    },
    "clock": {
        "tooltip-format": "<tt><big>{calendar}</big></tt>",
        "format": "{:%a %b %d : %H:%M}",
        "calendar": {
            "format": {
                "today": "<span color='#ff5555'><b><u>{}</u></b></span>"
            }
        }
    },
    "custom/power": {
        "format": "⏻ ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml",
        "menu-actions": {
            "shutdown": "shutdown",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "lock": "hyprlock",
            "logout": "hyprctl dispatch exit"
        }
    },
    "custom/notification": {
        "tooltip": true,
        "format": "<span size='14pt'>{icon} </span>",
        "format-icons": {
            "notification": "󱅫",
            "none": "󰂜",
            "dnd-notification": "󰂠",
            "dnd-none": "󰪓",
            "inhibited-notification": "󰂛",
            "inhibited-none": "󰪑",
            "dnd-inhibited-notification": "󰂛",
            "dnd-inhibited-none": "󰪑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    }
}
